Options -Indexes
RewriteEngine On

# IMPORTANT: match BASE_URL folder
RewriteBase /Projects/FLORENCE/

# Redirect example.php → /example
RewriteCond %{THE_REQUEST} \s/+Projects/FLORENCE/(.+?)\.php[\s?]
RewriteRule ^ %1 [R=301,L]

# Internally map /example → example.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]



